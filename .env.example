OPENAI_API_KEY=your_openai_api_key
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
WHATSAPP_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_ID=your_whatsapp_phone_id
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token

# webhook api key
GENERIC_WEBHOOK_API_KEY="prueba"

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# === Langfuse (OBLIGATORIAS) ===
LANGFUSE_PUBLIC_KEY=lf_public_xxxxxxxxxxxxxxxxx
LANGFUSE_SECRET_KEY=lf_secret_xxxxxxxxxxxxxxxxx
# Si usas cloud de Langfuse, pon su URL; si es self-host: http://<tu-host>:3002
LANGFUSE_HOST=https://cloud.langfuse.com

# === OpenTelemetry (RECOMENDADAS) ===
# Fuerza exportar trazas por OTLP HTTP al endpoint que construyes en configure_langfuse()
OTEL_TRACES_EXPORTER=otlp
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
# Nombre del servicio que verás en Langfuse/OTEL
OTEL_SERVICE_NAME=cordobai-agent
# O equivalencia vía resource attributes:
# OTEL_RESOURCE_ATTRIBUTES=service.name=cordobai-agent,service.version=0.1.0,service.environment=dev

# (Opcional) Más señal
# OTEL_METRICS_EXPORTER=none
# OTEL_LOGS_EXPORTER=none

# === Modo debug opcional (útil al principio) ===
# LANGFUSE_DEBUG=true
